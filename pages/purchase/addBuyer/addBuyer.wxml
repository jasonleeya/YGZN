<view class="add-buyer">
  <form bindsubmit="addSubmit">
    <view class="buyer-info  border-bt">
      <view class="info-name">职位</view>
      <view class="info-value">
        <input name="position" placeholder="请选择职位"></input>
      </view>
      <view class="cuIcon-right"></view>
    </view>
    <view class="buyer-info border-bt">
      <view class="info-name">业务员名称</view>
      <view class="info-value">
        <input name="name" placeholder="请输入业务员名称"></input>
      </view>
    </view>
    <view class="buyer-info border-bt">
      <view class="info-name">业务员电话</view>
      <view class="info-value">
        <input name="phoneNumber" type="number" placeholder="请输入电话"></input>
      </view>
    </view>
    <view class="buyer-info  margin-bt">
      <view class="info-name">等级</view>
      <view class="info-value">
        <input name="rank" placeholder="请设置等级"></input>
      </view>
       <view class="cuIcon-right"></view>
    </view>
    <view class="remark-title">备注</view>
    <textarea name="remark" placeholder="填写备注信息"></textarea>
    <button class="theme-bgc confirm-btn" form-type="submit">添加</button>
  </form>

</view>