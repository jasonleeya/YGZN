.order {
  width: calc(100vw - 60rpx);
  margin: 0 30rpx 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 5rpx #ccc;
}

.order-title {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fafafa;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.goods {
  display: flex;
  justify-content: left;
  background-color: #fff;
  border-top: 1rpx solid #f3f2f2;
}

.goods-pic {
  width: 200rpx;
  height: 200rpx;
}

 

.goods-info-wrapper {
  display: table;
  height: 200rpx;
}

.goods-info {
  display: table-cell;
  vertical-align: middle;
  padding: 30rpx 20rpx;
  width: calc(100vw - 360rpx);
}

.goods-count-wrapper {
  position: relative;
}

.goods-count {
  position: absolute;
  bottom: 30rpx;
  width: 100rpx;
  text-align: center;
  padding-right: 20rpx;
}

scroll-view {
  height: calc( 100vh - 100rpx);
  padding-top: 30rpx; 
}

.operate-btns {
  width: 100vw;
  height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  justify-content: space-around;
  padding: 0 210rpx;
  background-color: #fff
}

.btn {
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
  padding: 0 20rpx;
}
