.drop-down{  
  background-color: #fff; 
  padding:20rpx 30rpx 30rpx;
}
.drop-down-title{  

}
.drop-down-btns{
  display: flex;
  flex-wrap: wrap
}
.drop-down-btn{
   height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  margin-right: 30rpx; 
}
.search-scroll{
  height: calc(100vh - 200rpx)
}