.header{
 position: fixed;
  top: 0;
  height: 100ch;
}
.mask{
  height: calc(100vh - 200rpx);
  background-color: rgba(0, 0, 0, 0.4)
}
.search {
  height: 100rpx;
  background-color: #fff;
  padding-top: 20rpx;
  position: relative;
}

.search-input {
  height: 60rpx;
  margin: auto;
  border-radius: 30rpx;
  width: calc(100vw - 60rpx);
  padding-left: 80rpx;
}

.iconsearch {
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}

.drop-down {
  background-color: #fff;
}

.sort-methods {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: -1rpx;
}

.sort-method {
  position: relative;
  width: calc((100vw - 60rpx) / 4);
  text-align: center;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
}

.sort-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.theme-color::after {
  z-index: 999;
  content: "";
  display: block;
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
}

.sort-methods .icondown {
  font-size: 16rpx;
}

.sort-options {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  align-items: center;
  padding: 0 30rpx 30rpx;
}

.sort-option {
  /* width: 20vw; */
  height: 60rpx;
  border-radius: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  line-height: 60rpx;
  position: relative;
  background-color: #eee;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.date-picker {
  margin: auto;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
}
.person-change-page{
  padding: 0 40rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.person-change-page text{
margin-right:30rpx
}
.content{
  padding-top: 200rpx
}
 