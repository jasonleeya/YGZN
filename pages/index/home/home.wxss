.header {
  height: 100rpx;
  width: 100vw;
  background-color: #fff;
  padding-top: 20rpx;
  display: flex;
}

.scroll-body {
  height: calc(100vh - 200rpx);
}

.scroll-wrapper {
  padding-top: 30rpx;
}


.sales {
  width: 90%;
  margin: auto;
  border-radius: 10rpx;
  background-image: url('https://image.weilanwl.com/color2.0/cardBg.png');
  background-size: 100%;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.sales-today-title {
  width: 100%;
  text-align: center;
}

.sales-today-money {
  width: 100%;
  text-align: center;
  font-size: 60rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.sales-items {
  display: flex;
  margin-top: 50rpx;
}

.sales-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.sales-item:after {
  content: '';
  display: block;
  width: 1px;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.5);
  position: absolute;
  right: 0;
  top: 20rpx;
}

.sales-items .sales-item:last-child::after {
  display: none;
}

.project-list {
  display: flex;
  flex-wrap: wrap;
  width: 90%;
  margin: 0 auto;
  justify-content: space-between;
}

.project-item {
  position: relative;
  width: 48%;
  margin-top: 30rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  color: #fff;
  background-image: url('https://image.weilanwl.com/color2.0/cardBg.png');
  background-size: 100%;
}

.project-item::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: -10%;
  border-radius: 10rpx;
  opacity: 0.2;
  transform: scale(0.9, 0.9);
}

.project-title {
  letter-spacing: 5rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.project-title::first-letter {
  font-size: 40rpx;
}

.project-title-en {
  letter-spacing: 2rpx;
  position: relative;
}

.project-title-en::first-letter {
  font-size: 36rpx;
}

.project-title-en::after {
  position: absolute;
  right: 10rpx;
  content: "";
  display: block;
  width: 200rpx;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.5);
}

.project-title-en::before {
  position: absolute;
  bottom: 0;
   right: 10rpx;
  content: "";
  display: block;
  width: 50rpx;
  height: 3px;
  background-color: rgba(255, 255, 255, 0.5);
}

.project-icon {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  font-size: 40rpx;
}
