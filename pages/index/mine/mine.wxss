.mine-header {
  width: 100vw;
  height: 30vw;
  position: relative;
}

.header-bg {
  width: 100vw;
  height: 30vw;
}

.header-content {
  position: absolute;
  top: 0;
  width: 100vw;
  height: calc(30vw - 60rpx);
  display: flex;
  align-items: center;
  padding: 0 5vw;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.user-info {
  flex: 1;
  color: #fff;
  padding-left: 20rpx;
  width: calc(100vw - 300rpx);
}

.user-company {
  font-size: 34rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.uesr-name {
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-id {
  font-size: 28rpx;
  font-weight: lighter;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.toggle-account {
  height: 36rpx;
  padding: 0 10rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  border-radius: 18rpx;
}

.todo-list {
  width: 90vw;
  height: 30vw;
  background-color: #fff;
  z-index: 99;
  position: relative;
  top: -60rpx;
  margin: 0 auto -60rpx;
  border-radius: 20rpx;
}

.todo-list-title {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.todo-item-wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: calc(30vw - 60rpx);
}

todo-item {
  text-align: center;
}

.todo-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #fff;
  padding-left: 5rpx;
  margin: auto;
}

.todo-name, .todo-count {
  font-size: 20rpx;
}

.option {
  margin: 30rpx 0;
}

.option-item {
  background-color: #fff;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 40rpx;
}

.option-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.option-name {
  flex: 1;
}

.logout {
  margin: 400rpx auto 150rpx;
  width: 90vw;
  height: 80rpx;
  line-height: 80rpx;
}

.toggle-account-pop-wrappper {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.2);
  position: fixed;
  top: 0;
  z-index: 2000;
}

.mine-scroll {
  max-height: 100vh;
}

.toggle-account-pop {
  width: calc(100vw - 120rpx);
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 20rpx;
}

.pop-content {
  padding: 30rpx 60rpx 0;
}

.account {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.pop-title {
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 30rpx;
}

.operation-btn {
  display: flex;
  justify-content: space-around;
}

.cancel, .confirm {
  height: 100rpx;
  line-height: 100rpx;
  flex: 1;
  text-align: center;
}

.active {
  color: var(--themeColor);
  border: 1rpx solid var(--themeColor);
}
