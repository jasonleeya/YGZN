.credit-operate {
  height: 100vh;
  position: relative;
}

.confirm {
  width: calc(100vw - 60rpx);
  left: 50%;
  transform: translateX(-50%);
  bottom: 100rpx;
  position: absolute;
}

.operate-btns {
  width: 100vw;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  /* flex-wrap: wrap-reverse; */
  flex-direction: row-reverse;
  padding: 0 20rpx;
  background-color: #fff;
  align-items: center
}

.operate-btn {
  display: inline-block;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  margin-left: 20rpx; 
}
