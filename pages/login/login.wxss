page {
  background-color: #fff;
}

.login {
  padding: 180rpx 80rpx;
}

.login-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.input-wrapper {
  padding: 0 15rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #f3f6fb;
  display: flex;
}

.input-wrapper  input {
  height: 100rpx;
  line-height: 100rpx;
  flex: 1;
}

.error {
  background-color: rgba(255, 0, 0, 0.1);
}

.login-operate {
  margin: 20rpx 0 160rpx;
  display: flex;
  justify-content: space-between;
}

.login-operate label {
  margin: 0 -10rpx;
}

.login-operate checkbox {
  transform: scale(0.6);
}

.login-input-icon,.get-captcha  {
  line-height: 100rpx;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.get-captcha {
  font-size: 28rpx; 
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--themeColor) !important;
}

.login-btn {
  margin-top: 100rpx;
}
