.header-search {
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}

.input-wrapper {
  flex: 1;
  position: relative;
}

.input-wrapper  input {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: calc(100vw - 200rpx);
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 60rpx;
  border-radius: 30rpx;
}

.search-icon {
  position: absolute;
  z-index: 99;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.add {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: var(--themeColor);
  width: 120rpx;
  text-align: center;
  color: #fff;
}

.item {
  width: calc(100vw - 60rpx);
  background-color: #fff;
  margin: 30rpx auto;
  padding-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 10rpx #ddd
}

.header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.scroll-view{
  height: calc(100vh - 100rpx);
  
}
.name {
  flex: 1;
}

.info {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 30rpx 0;
}

.header .name-icon {
  line-height: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 10rpx;
  color: var(--themeColor);
}
