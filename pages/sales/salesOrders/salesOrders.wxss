.header {
  position: fixed;
  top: 0;
  height: 200rpx;
  z-index: 99;
}

.mask {
  height: calc(100vh - 200rpx);
  background-color: rgba(0, 0, 0, 0.4);
}

.search {
  height: 100rpx;
  background-color: #fff;
  padding-top: 20rpx;
  position: relative;
  width: 100vw;
}

.search-input {
  height: 60rpx;
  margin: auto;
  border-radius: 30rpx;
  width: calc(100vw - 60rpx);
  padding-left: 80rpx;
}

.iconsearch {
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}

.drop-down {
  background-color: #fff;
}

.sort-methods {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: -1rpx;
}

.sort-method {
  position: relative;
  /* width: calc((100vw - 60rpx) / 4); */
  margin-right: 20rpx;
  text-align: center;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  flex: 1
}

.sort-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sort-methods .theme-color::after {
  z-index: 999;
  content: "";
  display: block;
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
}

.sort-methods .icondown {
  font-size: 16rpx;
}

.sort-options {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  align-items: center;
  padding: 0 30rpx 30rpx;
}

.sort-option {
  /* width: 20vw; */
  height: 60rpx;
  border-radius: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  line-height: 60rpx;
  position: relative;
  background-color: #eee;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.date-picker {
  margin: auto;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  display: flex
}
.date-picker picker{
  background-color: #fff;
  width: 50vw;
}

.person-change-page {
  padding: 0 40rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.person-change-page text {
  margin-right: 30rpx;
}

.content {
  padding-top: 200rpx;
}

.order-item {
  width: calc(100vw - 60rpx);
  background-color: #fff;
  margin: 30rpx auto;
  border-radius: 20rpx;
  padding: 0 30rpx 0rpx;
  box-shadow:0 5rpx 5rpx #ccc
}

.order-header {
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  display: flex;
}

.order-id-icon {
  font-size: 35rpx;
  margin-right: 5rpx;
}

.order-id {
  flex: 1;
}

.order-info-list {
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-money {
  font-weight: bold;
}
.empty{
  position: fixed;
  width: 100vw;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
}
.read{
  font-weight: bold;
  font-size: 30rpx;
}
.add-btn {
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  z-index: 999;
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}