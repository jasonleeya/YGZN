@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "colorui/animation.wxss";
@import "imgs/iconfont/iconfont.wxss"; 


/* 主题色背景 */

page {
  --themeColor: #317efe;
}

.theme-bgc {
  background-color: var(--themeColor) !important;
  color: white;
}

/* 主题色字体 */

.theme-color {
  color: var(--themeColor) !important;
}

/* navigator hover背景色*/

.nav-hover {
  background-color: #fff;
}

switch::after, switch::before {
  top: 7rpx;
}

.border-bt::after {
  content: "";
  width: calc(100vw - 30rpx);
  height: 1rpx;
  position: absolute;
  bottom: 1rpx;
  left: 30rpx;
  background-color: #ddd;
  transform: scaleY(0.5)
}

.cell {
  display: flex;
  height: 88rpx;
  position: relative;
  background-color: #fff;
  padding-left: 30rpx;
  line-height: 88rpx;
}

.cell-name {
  width: 240rpx;
}

.cell-value {
  flex: 1;
}

.cell input {
  height: 88rpx;
  padding-right: 40rpx;
}
.cells-title{ 
  padding: 20rpx 30rpx;
}
.cell-gutter-bt{
  margin-bottom: 30rpx;
}
.cell-icon{
  padding-right: 30rpx;
  padding-left: 20rpx;
}
.remarke-textarea {
  width: 100vw;
  height: 200rpx;
  padding: 30rpx;
  margin-bottom: 100rpx;
  background-color: #fff;
  /* z-index: -1; */
}
.bold{
  font-weight: bold
}
.confirm-btn {
 position: relative;
  width: calc(100vw - 60rpx);
  height: 80rpx;
  line-height: 80rpx;
  margin: 100rpx auto;
}
.move{
  top: 0;
  margin-top: 0!important;
}
.cu-list>.cu-item {
 transition: all 0.2s ease-in-out 0s;
transform: translateX(0rpx);

}

.card {
  width: calc(100vw - 60rpx);
  margin: 30rpx auto;
  background-color: #fff;
  border-radius: 15rpx;
}

.card-head {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.card-title {
  display: flex;
  font-size: 32rpx;
  line-height: 40rpx;
}

.card-subtitle {
  line-height: 40rpx;
}

.card-icon {
  margin-right: 5rpx;
}

.card-content {
  padding: 0 30rpx 30rpx 30rpx;
}
.card-item{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.card-name{
  color: var(--gray);
}
.card-value{
  max-width: 500rpx;
}